# Make directory and cd into it automatically
function mkdircd () { mkdir -p "$@" && eval cd "\"\$$#\""; }

# Aliases for common commands
alias pg="ps aux | grep"
alias tf="tail -f -n 100"
alias gd="git difftool -t vimdiff"

# Aliases for directory navigation
alias ..="cd .."
alias ..2="cd ../.."
alias ..3="cd ../../.."
alias ..4="cd ../../../.."
alias ..5="cd ../../../../.."

# Alias to pretty-print the current path
alias path='echo -e ${PATH//:/\\n}'

# some more ls aliases
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

# Directory stack navigation
alias pd="pushd"
alias pc="pushd +1"
alias pp="popd"

# Start up server for proper vimtex
alias vim="vim --servername VIM"

# Debugging
alias wtf="python -m pdb -c continue"
alias tmux="tmux -2"

# Create tex directory (requires an argument)
alias newtex="bash $HOME/repos/setup-env/tex/create_base.sh"

alias kvm="kvm -m 512 -net nic -net user,hostfwd=tcp:127.0.0.1:2222-:22,hostfwd=tcp:127.0.0.1:8080-:8080 $HOME/vm-6858/vm-6858.vmdk"

# Wrap evince in function that sends to background and ignores output
function evince () {
  nohup evince "$@" > /dev/null 2>&1 & disown
}

# Wrap firefox in function that sends to background and ignores output
function ff () {
  nohup firefox "$@" > /dev/null 2>&1 & disown
}

# Wrap chromium in function that sends to background and ignores output
function chrome () {
  nohup chromium-browser --incognito "$@" > /dev/null 2>&1 & disown
}

